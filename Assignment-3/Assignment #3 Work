#define _CRT_SECURE_NO_WARNINGS // Turn off safe commands
#include <stdio.h>
#include <stdlib.h>

main() {
	//declare variables here

	int num1 = 0;
	int num2 = 0;
	int result = 0;
	int multiply = 0;
	
	printf("Give me a number...........:");
    scanf("%i", &num1);

	printf("Give me another number.....:");
	scanf("%i", &num2);

	result = num1 + num2;
	multiply = num1 * num2;


	printf("\n%i + %i = %i \n\n", num1,num2,result);

	printf("%i * %i = %i\n\n", num1, num2, multiply);

	
	
	system("pause");


} // end main
